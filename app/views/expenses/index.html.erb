<h1>Expenses</h1>

<div class="row">
  <div class="large-6 columns">
    <h3 class="subheader"> All Search Records </h3>
    <%= content_tag :div, "", id: "expenses_chart", data: { expenses: @expenses } %> 
  </div>
  <div class="large-6 columns">
    <h3 class="subheader"> All records greater than Â£100</h3>
    <%= content_tag :div, "", id: "expenses_chart1", data: { expenses: expenses_chart1_data } %>
  </div>
  <div class="large-4 columns">
    
  </div>

</div>

<%= form_tag expenses_path, :method => 'get' do %>
    <%= hidden_field_tag :direction, params[:direction] %>
    <%= hidden_field_tag :sort, params[:sort] %>

   <div class="row">
    <div class = "large-4 columns">
      <p>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Search", :name => nil, class: "button" %>
      </p>
    </div>


    <div class = "form_row large-4 columns">
       <label for="records">Results per page </label>
        <% [10, 25, 50, 100, 1000].each do |records| %>
            <%= radio_button_tag 'records', records, @records == records %>
            <%= records %>
        <% end %>
    </div>

    </div>
    </div>
<% end %>

<%= link_to 'New Expense', new_expense_path, class: "button" %>

<table>
  <tr>
    <th width="200"><%= sortable "name" %></th>
    <th width="200"><%= sortable "description" %></th>
    <th width="200"><%= sortable "amount" %></th>
    <th width="200"><%= sortable "vat" %></th>
    <th width="200"><%= sortable "user_id", "User" %></th>
    <th width="200"><%= sortable "created_at", "Date" %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @expenses.each do |expense| %>
  <tr>
    <td><%= expense.name %></td>
    <td><%= expense.description %></td>
    <td><%= number_to_currency(expense.amount, unit: "&pound;") %></td>
    <td><%= expense.vat %></td>
    <td><%= expense.user %></td>
    <td><%= l expense.created_at, format: :short %></td>
    <td><%= link_to 'Show', expense %></td>
    <td><%= link_to 'Edit', edit_expense_path(expense) %></td>
    <td><%= link_to 'Destroy', expense, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
<%= will_paginate @expenses %>
<br />



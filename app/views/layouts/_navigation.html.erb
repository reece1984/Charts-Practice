  <div class="row">
    
    <div class="large-5 columns">
      <h1><%= link_to "Expenses", root_path, :id => 'brand' %></h1>
    </div>
    <div class="large-7 columns">
      <ul class="button-group">

      <% if user_signed_in? %>
        <% if current_page?(expenses_path) %>
          <li><a href="#charts" class="button">Charts</a></li>
          <li><a href="#expense_filter" class="button">Filter</a></li>
          <li><a href="#data" class="button">Data</a></li>

        <% end %>
        <li>
        <%= link_to 'Expenses', expenses_path, class: "button" unless current_page?( expenses_path) %>
        </li>
        <li>
        <%= link_to 'Logout', destroy_user_session_path, :method=>'delete', class: "button" %>
        </li>
      <% else %>
        <li>
        <%= link_to 'Login', new_user_session_path, class: "button" %>
        </li>
      <% end %>
      <% if user_signed_in? %>
        <li>
        <%= link_to 'Edit account', edit_user_registration_path, class: "button" %>
        </li>
        <% if current_user.has_role? :admin %>
          <li>
          <%= link_to 'Admin', users_path, class: "button" %>
          </li>
        <% end %>
      <% else %>
        <li>
        <%= link_to 'Sign up', new_user_registration_path, class: "button" %>
        </li>
      <% end %>
      </ul>
    </div>
  </div>
